// views/profil.ejs
<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Profil</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <div class="container mt-5">
        <div class="card mx-auto" style="max-width: 400px;">
            <div class="card-body text-center">
                <h1 class="card-title">Dein Profil</h1>
                
                <!-- Profilbild -->
                <% if (user.image_url) { %>
                    <img src="<%= user.image_url %>" class="rounded-circle img-fluid" style="width: 150px; height: 150px; object-fit: cover;">
                <% } else { %>
                    <p>Kein Profilbild vorhanden</p>
                <% } %>
                
                <!-- Profildaten -->
                <p class="mt-3"><strong>Name:</strong> <%= user.name %></p>
                <p><strong>Geschlecht:</strong> <%= user.gender === 'male' ? 'Männlich' : 'Weiblich' %></p>
                <p><strong>Geburtstag:</strong> <%= user.birthday %></p>
                
                <!-- Formular zum Bearbeiten -->
                <h2 class="mt-4">Profildaten bearbeiten</h2>
                <form action="/profil/update" method="POST" class="mt-3">
                    <div class="mb-3">
                        <label for="name" class="form-label">Name:</label>
                        <input type="text" class="form-control" id="name" name="name" value="<%= user.name %>" required>
                    </div>
                    <div class="mb-3">
                        <label for="gender" class="form-label">Geschlecht:</label>
                        <select class="form-select" id="gender" name="gender">
                            <option value="male" <%= user.gender === 'male' ? 'selected' : '' %>>Männlich</option>
                            <option value="female" <%= user.gender === 'female' ? 'selected' : '' %>>Weiblich</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="birthday" class="form-label">Geburtstag:</label>
                        <input type="date" class="form-control" id="birthday" name="birthday" value="<%= user.birthday %>" required>
                    </div>
                    <div class="mb-3">
                        <label for="image_url" class="form-label">Profilbild URL:</label>
                        <input type="text" class="form-control" id="image_url" name="image_url" value="<%= user.image_url %>">
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Speichern</button>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
