<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>People</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="style.css">
</head>
<body>
    <!-- Navbar einfügen -->
    <%- include('partials/navbar') %>

    <div class="container mt-5">
        <div class="image-container text-center">
            <img id="avatar" src="https://xsgames.co/randomusers/avatar.php?g=male" alt="Random Avatar" class="img-fluid rounded-circle" style="width: 150px; height: 150px; object-fit: cover;">
        </div>
        <div class="buttons text-center mt-3">
            <button class="btn btn-danger me-2" onclick="dislikeImage()">Dislike</button>
            <button class="btn btn-success" onclick="likeImage()">Like</button>
        </div>

        <div class="profile-info text-center mt-4">
            <h1><%= profile.name %></h1>
            <img src="<%= profile.image_url %>" alt="Profilbild" class="img-fluid rounded-circle" style="width: 150px; height: 150px; object-fit: cover;">
            <p><strong>Geschlecht:</strong> <%= profile.gender === 'male' ? 'Männlich' : 'Weiblich' %></p>
            <p><strong>Geburtstag:</strong> <%= new Date(profile.birthday).toLocaleDateString('de-DE') %></p>
        </div>

        <div class="text-center mt-3">
            <form action="/people/like" method="POST" class="d-inline">
                <button type="submit" class="btn btn-success">Like</button>
            </form>
            <form action="/people/dislike" method="POST" class="d-inline">
                <button type="submit" class="btn btn-danger">Dislike</button>
            </form>
        </div>
    </div>

    <!-- JavaScript -->
    <script>
        let gender = 'male'; // Default gender

        function getRandomAvatar() {
            fetch(`http://localhost:8080/api/test/random?gender=${gender}`)
                .then(response => response.json())
                .then(data => {
                    const imageUrl = data.imageUrl;
                    document.getElementById('avatar').src = imageUrl;
                })
                .catch(error => console.error('Error fetching the profile:', error));
        }

        function likeImage() {
            console.log('Liked!');
            getRandomAvatar();
        }

        function dislikeImage() {
            console.log('Disliked!');
            getRandomAvatar();
        }

        function toggleGender() {
            gender = gender === 'male' ? 'female' : 'male'; // Toggle gender
            getRandomAvatar();
        }
    </script>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>


