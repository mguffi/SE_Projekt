<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profil</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <%- include('partials/navbar') %>

    <div class="container mt-5">
        <h1 class="text-center">Dein Profil</h1>
        <div class="card mx-auto" style="max-width: 400px;">
            <div class="card-body text-center">
                <!-- Profilbild -->
                <img src="<%= user.image_url %>" alt="Profilbild" class="rounded-circle" style="width: 150px; height: 150px; object-fit: cover;">
                <form action="/profil/update" method="POST" class="mt-3">
                    <input type="hidden" name="field" value="image_url">
                    <label for="image_url" class="form-label">Profilbild URL:</label>
                    <input type="text" id="image_url" name="value" class="form-control" value="<%= user.image_url %>">
                    <button type="submit" class="btn btn-primary mt-2">Ändern</button>
                </form>

                <!-- Name -->
                <form action="/profil/update" method="POST" class="mt-3">
                    <input type="hidden" name="field" value="name">
                    <label for="name" class="form-label">Name:</label>
                    <input type="text" id="name" name="value" class="form-control" value="<%= user.name %>">
                    <button type="submit" class="btn btn-primary mt-2">Ändern</button>
                </form>

                <!-- Geschlecht -->
                <form action="/profil/update" method="POST" class="mt-3">
                    <input type="hidden" name="field" value="gender">
                    <label for="gender" class="form-label">Geschlecht:</label>
                    <select id="gender" name="value" class="form-select">
                        <option value="male" <%= user.gender === 'male' ? 'selected' : '' %>>Männlich</option>
                        <option value="female" <%= user.gender === 'female' ? 'selected' : '' %>>Weiblich</option>
                    </select>
                    <button type="submit" class="btn btn-primary mt-2">Ändern</button>
                </form>

                <!-- Geburtstag -->
                <form action="/profil/update" method="POST" class="mt-3">
                    <input type="hidden" name="field" value="birthday">
                    <label for="birthday" class="form-label">Geburtstag:</label>
                    <input type="date" id="birthday" name="value" class="form-control" value="<%= user.birthday %>">
                    <button type="submit" class="btn btn-primary mt-2">Ändern</button>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
