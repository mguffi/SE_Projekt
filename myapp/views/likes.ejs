<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Likes und Matches</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <!-- Navbar einfügen -->
    <%- include('partials/navbar') %>

    <div class="container mt-5">
        <h2 class="text-center">Deine Likes</h2>
        <% if (likes.length > 0) { %>
            <div class="row">
                <% likes.forEach(like => { %>
                    <div class="col-md-4">
                        <div class="card mb-4">
                            <img src="<%= like.image_url %>" class="card-img-top" alt="Profilbild">
                            <div class="card-body text-center">
                                <h5 class="card-title"><%= like.name %></h5>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } else { %>
            <p class="text-center">Du hast noch keine Likes.</p>
        <% } %>

        <div class="text-center mt-4">
            <form action="/likes/reset" method="POST">
                <button type="submit" class="btn btn-danger">Alle Likes zurücksetzen</button>
            </form>
        </div>

        <h2 class="text-center mt-5">Deine Matches</h2>
        <% if (matches.length > 0) { %>
            <div class="row">
                <% matches.forEach(match => { %>
                    <div class="col-md-4">
                        <div class="card mb-4">
                            <img src="<%= match.image_url %>" class="card-img-top" alt="Profilbild">
                            <div class="card-body text-center">
                                <h5 class="card-title"><%= match.name %></h5>
                                <form action="/chat" method="GET">
                                    <input type="hidden" name="userId" value="<%= match.id %>">
                                    <button type="submit" class="btn btn-primary">Chat starten</button>
                                </form>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } else { %>
            <p class="text-center">Du hast noch keine Matches.</p>
        <% } %>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>