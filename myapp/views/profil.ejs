<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Profil</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <div class="container mt-5">
        <div class="card mx-auto" style="max-width: 400px;">
            <div class="card-body text-center">
                <h1 class="card-title">Dein Profil</h1>
                
                <!-- Profilbild -->
                <img src="<%= user.image_url %>" alt="Profilbild" style="width: 150px; height: 150px;">
                
                <!-- Profildaten -->
                <p><strong>Name:</strong> <%= user.name %></p>
                <p><strong>Geschlecht:</strong> <%= user.gender === 'male' ? 'Männlich' : 'Weiblich' %></p>
                <p><strong>Geburtstag:</strong> <%= new Date(user.birthday).toLocaleDateString('de-DE') %></p>
                
                <!-- Button zum Bearbeiten -->
                <button class="btn btn-primary mt-4" data-bs-toggle="modal" data-bs-target="#editProfileModal">Profil bearbeiten</button>
            </div>
        </div>
    </div>

    <!-- Modal für das Bearbeiten des Profils -->
    <div class="modal fade" id="editProfileModal" tabindex="-1" aria-labelledby="editProfileModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editProfileModalLabel">Profildaten bearbeiten</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Schließen"></button>
                </div>
                <div class="modal-body">
                    <form action="/profil/update" method="POST">
                        <div class="mb-3">
                            <label for="name" class="form-label">Name:</label>
                            <input type="text" class="form-control" id="name" name="name" value="<%= user.name %>" required>
                        </div>
                        <div class="mb-3">
                            <label for="gender" class="form-label">Geschlecht:</label>
                            <select class="form-select" id="gender" name="gender">
                                <option value="male" <%= user.gender === 'male' ? 'selected' : '' %>>Männlich</option>
                                <option value="female" <%= user.gender === 'female' ? 'selected' : '' %>>Weiblich</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="birthday" class="form-label">Geburtstag:</label>
                            <input type="date" class="form-control" id="birthday" name="birthday" value="<%= user.birthday %>" required>
                        </div>
                        <div class="mb-3">
                            <label for="image_url" class="form-label">Profilbild URL:</label>
                            <input type="text" class="form-control" id="image_url" name="image_url" value="<%= user.image_url %>">
                        </div>
                        <button type="submit" class="btn btn-success w-100">Speichern</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
